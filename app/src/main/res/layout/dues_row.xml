<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginStart="10dp">
    <TextView android:layout_width="100dp"
              android:layout_height="50dp"
              android:id="@+id/column1"
              android:textColor="#000"
              android:textSize="16sp"
              android:layout_weight="0"
              android:text="Sample"
              android:layout_gravity="center_horizontal|center"
              android:fontFamily="@font/bungee" android:layout_marginStart="10dp"/>
    <TextView android:layout_width="100dp"
              android:layout_height="50dp"
              android:id="@+id/column2"
              android:textColor="#000"
              android:textSize="16sp"
              android:textAlignment="center"
              android:layout_weight="2"
              android:text="Sample"
              android:layout_gravity="center_horizontal|center"
              android:fontFamily="@font/bungee"/>
    <TextView android:layout_width="100dp"
              android:layout_height="50dp"
              android:id="@+id/column3"
              android:textColor="#000"
              android:textSize="16sp"
              android:textAlignment="center"
              android:layout_weight="2"
              android:text="Sample"
              android:layout_gravity="center_horizontal|center"
              android:fontFamily="@font/bungee"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:backgroundTint="#FFC400"
               android:layout_gravity="center_horizontal|center"
               android:id="@+id/view_expense"
               android:background="@android:drawable/ic_menu_view" android:layout_marginEnd="5dp"
               android:foreground="@android:drawable/ic_menu_view" android:foregroundTint="#FFC400"/>
</LinearLayout>
